<!-- views/note_create.ejs -->
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <title>新增笔记</title>
    <style>
        body {
            background: #f5f6fa;
            font-family: "Microsoft YaHei", Arial, sans-serif;
        }
        .note-container {
            width: 420px;
            margin: 80px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            padding: 36px 32px 28px 32px;
        }
        .note-title {
            font-size: 26px;
            color: #409eff;
            text-align: center;
            margin-bottom: 28px;
            letter-spacing: 2px;
        }
        textarea {
            width: 100%;
            min-height: 120px;
            font-size: 18px;
            padding: 12px;
            border: 1px solid #dcdfe6;
            border-radius: 6px;
            resize: vertical;
            outline: none;
            transition: border 0.2s;
            box-sizing: border-box;
        }
        textarea:focus {
            border-color: #409eff;
        }
        .btn-group {
            text-align: right;
            margin-top: 18px;
        }
        .save-btn {
            background: #409eff;
            color: #fff;
            border: none;
            padding: 10px 32px;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.2s;
        }
        .save-btn:hover {
            background: #307fd6;
        }
        .back-link {
            display: inline-block;
            margin-top: 18px;
            color: #888;
            text-decoration: none;
            font-size: 15px;
            transition: color 0.2s;
        }
        .back-link:hover {
            color: #409eff;
        }
    </style>
</head>
<body>
    <div class="note-container">
        <div class="note-title">新增笔记</div>
        <form action="/note/create" method="post">
            <textarea name="content" rows="8" placeholder="请输入笔记内容"></textarea>
            <div class="btn-group">
                <button type="submit" class="save-btn">保存</button>
            </div>
        </form>
        <a href="/" class="back-link">← 返回首页</a>
    </div>
</body>
</html>